{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'block_installer.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{% endblock %}


{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    <form method="post" action="{{ url('block_installer_admin_config', { block_type : Config.block_type }) }}">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                        <span class="card-title">{{ 'block_installer.admin.config.title'|trans }}</span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-2 control-label">{{ 'block_installer.admin.config.label_block_name'|trans }}</label>
                                    <div class="col-5">
                                        {{ form_widget(form.block_name) }}
                                        {{ form_errors(form.block_name) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-2 control-label">{{ 'block_installer.admin.config.label_file_name'|trans }}</label>
                                    <div class="col-5">
                                        {{ form_widget(form.file_name) }}
                                        {{ form_errors(form.file_name) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-2 control-label">{{ 'block_installer.admin.config.label_block_type'|trans }}</label>
                                    <div class="col-5">
                                        {{ form_widget(form.block_type) }}
                                        {{ form_errors(form.block_type) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{ url('admin_store_plugin') }}"><i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'block_installer.admin.config.conversion.back'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'block_installer.admin.config.conversion.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock main %}
